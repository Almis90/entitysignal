@{
  ViewData["Title"] = "Home Page";
}


<div ng-controller="testController">
  <div class="row">
    <div class="col">
      <div ng-show="entitySignal.status == 2" ng-cloak class="alert alert-success text-center" role="alert">
        Connected to entity framework through signalr (ID: {{entitySignal.connectionId}})
      </div>

      <div ng-show="entitySignal.status == 0" class="alert alert-dark text-center" role="alert">
        Disconnected
      </div>

      <div ng-show="entitySignal.status == 1" ng-cloak class="alert alert-primary text-center" role="alert">
        Connecting to entity framework through signalr
      </div>
    </div>
  </div>

  <div class="row pb-3">
    <div class="col-6">
      <button ng-click="createNew()" class="btn btn-secondary btn-block btn-lg">Create 1 New</button>
    </div>
    <div class="col-6">
      <button ng-click="createFiveNew()" class="btn btn-secondary btn-block btn-lg">Create 5 New</button>
    </div>
  </div>
  <div class="row pb-3">
    <div class="col">
      <button ng-click="changeRandom()" class="btn btn-secondary btn-block btn-lg">Change Random</button>
    </div>
  </div>
  <div class="row pb-3">
    <div class="col-6">
      <button ng-click="deleteAll()" class="btn btn-secondary btn-block btn-lg">Delete All</button>
    </div>
    <div class="col-6">
      <button ng-click="deleteRandom()" class="btn btn-secondary btn-block btn-lg">Delete Random</button>
    </div>
  </div>

