  <div class="row">
    <div class="col-sm-3">
      <h2>Messages</h2>
      <pre ng-repeat="message in messages">{{message | json}}</pre>
    </div>
    <div class="col-sm-3">
      <h2>Messages with odd id</h2>
      <pre ng-repeat="filterMessages in filterMessages">{{filterMessages | json}}</pre>
    </div>
    <div class="col-sm-3">
      <h2>Jokes</h2>
      <pre ng-repeat="joke in jokes">{{joke | json}}</pre>
    </div>
    <div class="col-sm-3">
      <h2>Jokes with guid answer</h2>
      <pre ng-repeat="joke in guidJokes">{{joke | json}}</pre>
    </div>
  </div>
</div>

@section Scripts{
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular.min.js"></script>
  <script src="~/lib/signalr/dist/browser/signalr.js"></script>
  <script src="~/ts/data.js" asp-append-version="true"></script>
}
